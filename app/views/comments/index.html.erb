<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>
    <p>
    <%= link_to "Show this post", [@post] %>
      <%= link_to "Show this comment", [@post,comment] %>
    </p>
  <% end %>

</div>

<%= link_to "New comment", new_post_comment_path(@post) %>